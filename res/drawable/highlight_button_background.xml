<selector xmlns:android="http://schemas.android.com/apk/res/android">

  <item android:state_pressed="true" >
    <shape>
      <gradient
        android:startColor="#a0ffb010"
        android:endColor=  "#a0301000"
        android:angle="270" />
        <!-- #a0ffb010 -->
      <!--solid android:color="#40606060" /-->
      <corners
        android:radius="4dp" />
      <padding
        android:left="4dp"
        android:right="4dp"
        android:top="4dp"
        android:bottom="4dp" />
    </shape>
  </item>

  <item android:state_focused="true" >
    <shape>
      <!--gradient
        android:startColor="#ff8888e0"
        android:endColor=  "#ff2222a0"
        android:angle="270" /-->
      <gradient
        android:startColor="#a0ffb010"
        android:endColor=  "#a0301000"
        android:angle="270" />
        <!-- #a0000000 -->
      <!--solid android:color="#c0606060" /-->
      <corners
        android:radius="4dp" />
      <padding
        android:left="4dp"
        android:right="4dp"
        android:top="4dp"
        android:bottom="4dp" />
    </shape>
  </item>

  <item>        
    <shape>
      <!--gradient
        android:startColor="#70101010"
        android:endColor=  "#70000000"
        android:angle="270" /-->
      <solid android:color="#a0000000" />
      <!--stroke
        android:width="2dp"
        android:color="#505050" /-->
      <corners
        android:radius="4dp" />
      <padding
        android:left="4dp"
        android:right="4dp"
        android:top="4dp"
        android:bottom="4dp" />
    </shape>
  </item>

</selector>

